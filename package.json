{
  "name": "@nutriot/bandcamp-api",
  "version": "0.3.0",
  "description": "Node.js library for the Bandcamp API",
  "main": "lib/index.cjs",
  "exports": {
    "import": "./index.js",
    "require": "./index.cjs"
  },
  "files": [
    "lib/"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/nutriot/bandcamp-api.git"
  },
  "keywords": [
    "bandcamp",
    "bandcamp-api"
  ],
  "license": "MIT",
  "scripts": {
    "build": "rollup --config",
    "dev": "npm run start",
    "fix": "eslint --fix ./src",
    "lint:json": "jsonlint --quiet ./tools/*.json ./*.json",
    "lint:ts": "eslint ./src",
    "lint": "npm-run-all --parallel lint:*",
    "start": "rollup --watch --config",
    "test": "ava ./test/*.js --serial --verbose"
  },
  "dependencies": {},
  "devDependencies": {
    "@ava/typescript": "^1.1.1",
    "@rollup/plugin-typescript": "^5.0.2",
    "@types/node": "^14.0.27",
    "@typescript-eslint/eslint-plugin": "^2.34.0",
    "@typescript-eslint/parser": "^2.34.0",
    "ava": "^3.11.0",
    "dotenv": "^8.2.0",
    "eslint": "^7.6.0",
    "esm": "^3.2.25",
    "husky": "^4.2.3",
    "is-ci": "^2.0.0",
    "isomorphic-fetch": "^2.2.1",
    "jsonlint": "^1.6.3",
    "lint-staged": ">=10",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.2",
    "rollup": "^2.23.0",
    "typescript": "^3.9.7"
  },
  "ava": {
    "require": [
      "esm"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.json": "jsonlint --quiet",
    "*.ts": "eslint --cache --fix"
  }
}
